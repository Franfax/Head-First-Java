package guessGame;

public class Player {
	
	private String name;
	
	Player(String name) {
		this.name = name;
	}
	
	public void talk() {
		System.out.println("hi");
	}
	
	public void greeting() {
		String[] greetings = { "Hello.", "Hi!", "Nice to be here.", "What's up guys?", "Guten Tag.", "Salut!"};
		String hi = greetings[(int) (Math.random()*6)];
		
		System.out.println(name + " : " + hi);
	}

}
